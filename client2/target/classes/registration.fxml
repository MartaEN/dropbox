<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Registration_FX">
    <children>
        <Label layoutX="32.0" layoutY="41.0" text="Регистрация нового пользователя">
        <font>
            <Font name="System Bold" size="14.0" />
        </font>
        </Label>
        <TextField fx:id="username" layoutX="169.0" layoutY="91.0" onAction="#checkNewUserName" prefHeight="25.0" prefWidth="181.0" />
        <PasswordField fx:id="password" layoutX="169.0" layoutY="136.0" onAction="#checkPassword" prefHeight="25.0" prefWidth="181.0" />
        <PasswordField fx:id="password1" layoutX="169.0" layoutY="181.0" onAction="#checkRepeatedPassword" prefHeight="25.0" prefWidth="181.0" />
        <Label layoutX="32.0" layoutY="95.0" prefHeight="17.0" prefWidth="149.0" text="Имя пользователя:" />
        <Label layoutX="32.0" layoutY="140.0" prefHeight="17.0" prefWidth="123.0" text="Пароль" />
        <Label layoutX="32.0" layoutY="185.0" prefHeight="17.0" prefWidth="123.0" text="Подтвердите пароль" />
        <Button fx:id="btnRegister" disable="true" layoutX="222.0" layoutY="235.0" mnemonicParsing="false" onAction="#signUp" text="Зарегистрироваться" />
        <Hyperlink layoutX="210.0" layoutY="270.0" onAction="#switchToAuthentication" text="Уже зарегистрированы?" />
    </children>

</AnchorPane>
